---
import ContainerSection from "../../ui/ContainerSection.astro";
import WhyChooseUs from "./WhyChooseUs.astro";
import ProfileCard from "./ProfileCard.astro";

// Definimos los datos aquí para pasarlos como props
const features = [
  {
    icon: 'IconCheckCircle', // Usaremos nombres para identificar los iconos
    title: '100% Digital',
    description: 'Sin papeles, rápido, cómodo y seguro. Todo el proceso se realiza de forma digital.'
  },
  {
    icon: 'IconChat',
    title: 'Atención Personalizada',
    description: 'Sin límite de consultas por teléfono, WhatsApp, videollamada o email.'
  },
  {
    icon: 'IconZap',
    title: 'Servicio Ágil',
    description: 'Respuestas rápidas y eficientes para todas tus consultas contables y fiscales.'
  },
  {
    icon: 'IconShield',
    title: 'Experiencia y Confianza',
    description: 'Años de experiencia respaldando a personas y empresas en sus obligaciones fiscales.'
  }
];

const profile = {
  imageUrl: '/imagen2.jpeg',
  name: 'Carmen Acosta',
  title: 'Contadora Pública',
  description: 'Profesional especializada en servicios contables y fiscales con amplia experiencia en el asesoramiento a monotributistas, responsables inscriptos y sociedades.',
  workModalities: [
    'Asesoramiento por teléfono',
    'WhatsApp y videollamadas',
    'Consultas por email',
    'Servicio completamente digital'
  ]
};
---

<ContainerSection id="nosotros">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:grid lg:grid-cols-2 lg:gap-12 items-center">
      
      <WhyChooseUs features={features} />

      <ProfileCard
        imageUrl={profile.imageUrl}
        name={profile.name}
        title={profile.title}
        description={profile.description}
        workModalities={profile.workModalities}
      />

    </div>
  </div>
</ContainerSection>