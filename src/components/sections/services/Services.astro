---
import ContainerSection from "../../ui/ContainerSection.astro";

const servicios = [
  {
    id: "monotributo",
    titulo: "Monotributo",
    icono: {
      viewBox: "0 0 24 24",
      path: "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z",
      bgColor: "bg-blue-100",
      iconColor: "text-blue-600",
    },
    caracteristicas: [
      "Alta/Baja",
      "Recategorización",
      "Ingresos Brutos",
      "Planes de Pago",
      "Factura Electronica",
      "Certificaciones",
      "Atención a Fiscalizaciones",
    ],
  },
  {
    id: "responsables-inscriptos",
    titulo: "Responsables Inscriptos",
    icono: {
      viewBox: "0 0 24 24",
      path: "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4",
      bgColor: "bg-green-100",
      iconColor: "text-green-600",
    },
    caracteristicas: [
      "Alta/Baja",
      "Liquidacion DDJJ mensuales (IVA, Ingresos Brutos)",
      "Liquidacion DDJJ anuales (Impto, Ganancias, Ingresos Brutos)",
      "Certificaciones",
      "Planes de Pago",
      "Facturacion",
      "Atención a Fiscalizaciones",
    ],
  },
  {
    id: "sociedades",
    titulo: "Sociedades",
    icono: {
      viewBox: "0 0 24 24",
      path: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z",
      bgColor: "bg-purple-100",
      iconColor: "text-purple-600",
    },
    caracteristicas: [
      "Constitución",
      "Impuestos",
      "Contabilidad",
      "Balances",
      "Atención a Fiscalizaciones",
    ],
  },
];
---

<ContainerSection id="servicios">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        Nuestros Servicios
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Ofrecemos una amplia gama de servicios contables y fiscales para
        personas físicas y jurídicas
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        servicios.map((servicio) => (
          <div class="bg-gray-50 rounded-xl p-6 hover:shadow-lg transition-shadow">
            <div
              class={`w-12 h-12 ${servicio.icono.bgColor} rounded-lg flex items-center justify-center mb-4`}
            >
              <svg
                class={`w-6 h-6 ${servicio.icono.iconColor}`}
                fill="none"
                stroke="currentColor"
                viewBox={servicio.icono.viewBox}
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d={servicio.icono.path}
                />
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-3">
              {servicio.titulo}
            </h3>
            <ul class="space-y-2 text-gray-600">
              {servicio.caracteristicas.map((caracteristica) => (
                <li class="flex items-center">
                  <svg
                    class="w-4 h-4 text-green-500 mr-2"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                      clip-rule="evenodd"
                    />
                  </svg>
                  {caracteristica}
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</ContainerSection>
