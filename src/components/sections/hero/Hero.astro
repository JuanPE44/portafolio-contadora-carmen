---
import ContainerSection from "../../ui/ContainerSection.astro";
import { CONTACT_INFO } from "../../../utils/constants";
---

<ContainerSection id="inicio" className=" py-0">
  <div class="mx-auto w-full h-screen">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center h-full">
      <!-- Contenido principal -->
      <div class="text-center lg:text-left">
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 leading-tight mb-2"
        >
          {CONTACT_INFO.nombre}
        </h1>
        <h2 class="text-xl md:text-2xl text-primary-600 font-semibold mb-6">
          {CONTACT_INFO.titulo}
        </h2>
        <p class="text-lg text-gray-600 mb-8 leading-relaxed">
          {CONTACT_INFO.descripcion}
        </p>

        <div
          class="flex flex-col sm:flex-row gap-4 mb-8 justify-center lg:justify-start"
        >
          <a
            href="#contacto"
            class="bg-primary-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-primary-700 transition-colors text-center"
          >
            Consulta Gratuita
          </a>
          <a
            href={`https://wa.me/${CONTACT_INFO.whatsapp}`}
            target="_blank"
            class="border-2 border-primary-600 text-primary-600 px-8 py-3 rounded-lg font-semibold hover:bg-primary-600 hover:text-white transition-colors text-center"
          >
            WhatsApp
          </a>
        </div>

        <div
          class="flex flex-wrap items-center gap-4 lg:gap-6 text-sm text-gray-600 justify-center lg:justify-start"
        >
          {
            CONTACT_INFO.beneficios.map((beneficio) => (
              <div class="flex items-center">
                <svg
                  class="w-5 h-5 text-green-500 mr-2 flex-shrink-0"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  />
                </svg>
                {beneficio}
              </div>
            ))
          }
        </div>
      </div>

      <!-- Imagen de la contadora -->
      <div class="flex justify-center items-center">
        <div
          class="relative bg-white rounded-2xl shadow-xl overflow-hidden w-80 lg:w-96"
        >
          <!-- Elementos decorativos
          <div
            class="absolute -top-4 -right-4 w-20 h-20 bg-primary-100 rounded-full opacity-50 z-50"
          >
          </div>
          <div
            class="absolute -bottom-4 -left-4 w-12 h-12 bg-primary-200 rounded-full opacity-30 z-50"
          >
          </div>
           -->
          <!-- Imagen principal -->
          <div class="aspect-square relative object-bottom">
            <img
              src={CONTACT_INFO.imagen ||
                "/placeholder.svg?height=400&width=300"}
              alt={`${CONTACT_INFO.nombre} - ${CONTACT_INFO.titulo}`}
              class="w-full h-full object-cover"
            />
            <!-- Overlay con gradiente sutil -->
            <div
              class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent"
            >
            </div>
          </div>

          <!-- InformaciÃ³n de contacto superpuesta -->
          <div
            class="absolute bottom-0 left-0 right-0 bg-white/95 backdrop-blur-sm p-4"
          >
            <div class="text-center mb-3">
              <h3 class="text-lg font-semibold text-gray-900 mb-1">
                {CONTACT_INFO.nombre}
              </h3>
              <p class="text-primary-600 font-medium text-sm">
                {CONTACT_INFO.titulo}
              </p>
            </div>

            <div class="space-y-2">
              <div class="flex items-center justify-center">
                <svg
                  class="w-4 h-4 text-primary-600 mr-2 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
                <span class="text-gray-700 text-sm"
                  >{CONTACT_INFO.telefono}</span
                >
              </div>
              <div class="flex items-center justify-center">
                <svg
                  class="w-4 h-4 text-primary-600 mr-2 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
                <span class="text-gray-700 text-sm">{CONTACT_INFO.email}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</ContainerSection>
