---
interface Props {
  imageUrl?: string;
  nombre: string;
  titulo: string;
}
const { imageUrl, nombre, titulo } = Astro.props;

const finalImageUrl = imageUrl || "/placeholder.svg?height=400&width=300";
---

<div class="relative">
  <!-- Card principal -->
  <div class="relative bg-white rounded-2xl shadow-2xl overflow-hidden w-80 lg:w-96 mx-auto">
    <div class="aspect-square relative">
      <img
        src={finalImageUrl || "/placeholder.svg"}
        alt={`${nombre} - ${titulo}`}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-transparent to-transparent"></div>
    </div>

    <div class="absolute bottom-0 left-0 right-0 bg-white/95 backdrop-blur-sm p-2">
      <div class="text-center">
        <h3 class="text-xl font-bold text-gray-900 mb-1">
          Carmen Acosta
        </h3>
        <p class="text-primary-600 font-semibold text-sm mb-3">
          Contadora publica
        </p>
        <div class="flex items-center justify-center space-x-4 text-xs text-gray-600">
          <div class="flex items-center">
            <svg class="w-3 h-3 text-green-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            Certificada
          </div>
          <div class="flex items-center">
            <svg class="w-3 h-3 text-green-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            Online
          </div>
        </div>
      </div>
    </div>
  </div>

