---
interface Props {
  imageUrl?: string;
  nombre: string;
  titulo: string;
}
const { imageUrl, nombre, titulo } = Astro.props;

const finalImageUrl = imageUrl || "/placeholder.svg?height=400&width=300";
---

<div class="relative mt-20 mb-10 sm:mt-0 sm:mb:0">
  <!-- Card principal -->
  <div
    class="relative bg-zinc-400 rounded-2xl shadow-2xl overflow-hidden w-80 lg:w-96 mx-auto"
  >
    <div class="aspect-square relative">
      <img
        src={finalImageUrl || "/placeholder.svg"}
        alt={`${nombre} - ${titulo}`}
        class="w-full h-full object-cover"
      />
      <div
        class="absolute inset-0 bg-gradient-to-t from-black/30 via-transparent to-transparent"
      >
      </div>
    </div>

    <div
      class="absolute bottom-0 left-0 right-0 bg-white/95 backdrop-blur-sm p-2"
    >
      <div class="text-center">
        <h3 class="text-xl font-bold text-gray-900 mb-1">Carmen Acosta</h3>
        <p class="text-secondary font-semibold text-sm mb-3">
          Contadora publica
        </p>
        <div
          class="flex items-center justify-center space-x-4 text-xs text-gray-600"
        >
        </div>
      </div>
    </div>
  </div>

  <div
    class="absolute -top-5 -left-5 sm:-left-20 sm:top-4 bg-white/95 backdrop-blur-sm rounded-2xl shadow-lg border border-gray-200/50 p-3 w-44"
  >
    <div class="flex items-center">
      <div
        class="w-10 h-10 bg-blue-100 rounded-xl flex items-center justify-center mr-3"
      >
        <svg
          class="w-5 h-5 text-green-600"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
