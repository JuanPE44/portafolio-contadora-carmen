---
interface Props {
  beneficios: string[];
}
const { beneficios } = Astro.props;
---
<div class="flex flex-wrap items-center gap-4 lg:gap-6 text-sm text-gray-700 justify-center lg:justify-start">
  {
    beneficios.map((beneficio) => (
      <div class="flex items-center">
        <svg
          class="w-5 h-5 text-green-500 mr-2 flex-shrink-0"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
            clip-rule="evenodd"
          />
        </svg>
        {beneficio}
      </div>
    ))
  }
</div>