---
interface Props {
  whatsapp: string;
  contactLink: string;
  servicesLink: string;
}
const { whatsapp, contactLink, servicesLink } = Astro.props;
---
<div class="flex flex-col sm:flex-row gap-4 mb-8 justify-center lg:justify-start">
  <a
    href={contactLink}
    class="bg-primary text-white px-8 py-3 rounded-lg font-semibold hover:bg-primary-700 transition-colors text-center"
  >
    Consulta Gratuita
  </a>
  <a
    href={`https://wa.me/${whatsapp}`}
    target="_blank"
    class="border-2 border-secondary text-secondary px-8 py-3 rounded-lg font-semibold hover:bg-secondary hover:text-white transition-colors text-center"
  >
    Contactar por WhatsApp
  </a>
</div>