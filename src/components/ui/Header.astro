<header
  id="header-desktop"
  class="bg-white shadow-sm fixed w-full rounded-xl top-4 z-40 max-w-6xl 2xl:max-w-6xl px-4 sm:mx-auto left-1/2 -translate-x-1/2 top"
>
  <nav class="mx-auto">
    <div class="flex justify-between items-center py-2">
      <div class="flex gap-1 items-center">
        <div class="border-b-4 border-gray-600">
          <svg width="35" height="35" viewBox="0 0 18 16" class="fill-gray-600"
            ><path
              d="M3.5 2h-3c-.275 0-.5.225-.5.5v11c0 .275.225.5.5.5h3c.275 0 .5-.225.5-.5v-11c0-.275-.225-.5-.5-.5M3 5H1V4h2zm5.5-3h-3c-.275 0-.5.225-.5.5v11c0 .275.225.5.5.5h3c.275 0 .5-.225.5-.5v-11c0-.275-.225-.5-.5-.5M8 5H6V4h2z"
            ></path><path
              class="fill-primary"
              d="m11.954 2.773l-2.679 1.35a.5.5 0 0 0-.222.671l4.5 8.93a.5.5 0 0 0 .671.222l2.679-1.35a.5.5 0 0 0 .222-.671l-4.5-8.93a.5.5 0 0 0-.671-.222"
            ></path><path d="M14.5 13.5a.5.5 0 1 1-1 0a.5.5 0 0 1 1 0"
            ></path></svg
          >
        </div>
        <div class="flex flex-col">
          <h1 class="text-xl font-bold text-primary">Estudio contable</h1>
          <p class="text-sm text-gray-600">Asesoramiento impositivo</p>
        </div>
      </div>

      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-4">
          <a
            href="#servicios"
            class="text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition-colors"
            >Servicios</a
          >
          <a
            href="#nosotros"
            class="text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition-colors"
            >Nosotros</a
          >
          <a
            href="#contacto"
            class="text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition-colors"
            >Contacto</a
          >
        </div>
      </div>

      <div class="md:hidden">
        <button
          type="button"
          class="mobile-menu-button bg-gray-100 inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-200"
        >
          <svg
            class="h-6 w-6"
            stroke="currentColor"
            fill="none"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <div class="mobile-menu hidden md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t">
        <a
          href="#inicio"
          class="text-gray-700 hover:text-primary-600 block px-3 py-2 rounded-md text-base font-medium"
          >Inicio</a
        >
        <a
          href="#servicios"
          class="text-gray-700 hover:text-primary-600 block px-3 py-2 rounded-md text-base font-medium"
          >Servicios</a
        >
        <a
          href="#nosotros"
          class="text-gray-700 hover:text-primary-600 block px-3 py-2 rounded-md text-base font-medium"
          >Nosotros</a
        >
        <a
          href="#contacto"
          class="text-gray-700 hover:text-primary-600 block px-3 py-2 rounded-md text-base font-medium"
          >Contacto</a
        >
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.querySelector(".mobile-menu-button");
  const mobileMenu = document.querySelector(".mobile-menu");

  mobileMenuButton?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
  });

 const handleScroll = () => {
  const element = document.getElementById("header-desktop");
  if (!element) return;

  const scrollY = window.scrollY;
  const maxScroll = 100; // A partir de cu√°nto scroll desaparece el espacio
  const initialTop = 16; // Espacio inicial en px

  // Calculamos el nuevo top reduciendo el espacio
  const newTop = Math.max(0, initialTop - (scrollY * initialTop) / maxScroll);

  element.style.top = `${newTop}px`;
  element.style.transition = "top 0.2s ease-out";
};

if (typeof window !== "undefined") {
  window.addEventListener("scroll", handleScroll);
}
</script>
