---
interface Props {
  className?: string;
  id: string;
}
const { id, className = "py-20 md:py-28" } = Astro.props;
---

<section id={id} class={` w-full md:min-h-screen max-w-6xl 2xl:max-w-6xl px-4 sm:px-10 md:px-12 lg:px-2 sm:mx-auto relative overflow-x-hidden lg:overflow-x-visible ${className}`}>
  <slot />
</section>
